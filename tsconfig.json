{
    "compilerOptions": {
        "sourceMap": false,
        "target": "es2020",
        "module": "Node",
        "moduleResolution": "Node",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "types": [
            "node",
            "@wdio/types",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "@wdio/sauce-service",
        ]
    },
    "include": [
        "./config/**/*.ts",
        "./tests/**/*.ts"
    ]
}
